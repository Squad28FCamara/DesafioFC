{% extends 'layout.njk' %} {% block content %}

<head>
  <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"/>
</head>

<body>
 

  <section class="card">
    <div class="card-title">
      <h2>Informações sobre COVID-19</h2>
      <div class="card-content">
        Conheça os protocolos de segurança adotados para um retorno presencial
        seguro
      </div>
      <button onclick="window.location.href='/covid'">Saiba Mais</button>
    </div>
    <img src="cardImage.png" alt="" />
  </section>

  <div class="reservations-info">
    <h1>Reservas recentes</h1>
    <p>Confira e gerencie as suas últimas reservas</p>
  </div>

  <section class="reservations">
    <table cellspacing="0">
      <thead>
        <tr>
          <th>Polo</th>
          <th>Agendado Para</th>
          <th>Estação*</th>
          <th>Cancelar reserva</th>
        </tr>
      </thead>
      <tbody>
        {% for reservation in data.reservations %}
        <tr>
          <td id="left">{{ reservation.pole }}</td>
          <td>{{ reservation.date }}</td>
          <td>
            {{ reservation.station }}{{ reservation.seat
            }}{{ reservation.floor }}
          </td>
          <td id="rigth"> <img src="delete.png" id="delete" alt="deleteReservation"> </td>
        </tr>
        {%endfor%}
      </tbody>
    </table>
    <div class="legends">*[S = Sala; E = Estação; A = Andar]</div> 
  </section>

  {# <div class="modal-overlay">
    <div class="modal">
      <div class="modal-content">
        <h1> Você tem certeza de que deseja cancelar essa reserva? </h1>
        <img src="warning.png" alt="">
        <p>Uma vez feita, será necessário conferir a disponibilidade da estação de trabalho em uma nova reserva.</p>
        <div class="options"> <a href="/">Voltar</a><button id="cancel" onclick="">Confirmar</button></div>
      </div>
    </div>
  </div>  #}

     <script src="/scripts/deleteModal.js"></script>
</body>

{% endblock %}
