{% extends 'layout.njk' %} 

{% block content %}

<head>
  <title>Dashboard</title>
</head>

<body>  

<link rel="stylesheet" href="dashMain.css" />

<section class="card">
  <div class="card-info">
    <h1>Informações sobre COVID-19</h1>
    <p>
      Conheça os protocolos de segurança adotados para um retorno presencial
      seguro.
    </p>
    <button onclick="location.href='/covid'">Saiba Mais</button>
  </div>
</section>

<div class="reservations-info">
  <h1>Reservas Resentes</h1>
  <p>Confira e gerencie as suas últimas reservas</p>
</div>

<section class="reservations">

  <div class="pole">
    <h5>Polo</h5>
    {% for reservation in data.reservations %}
     <div> {{reservation.pole}}</div>
    {% endfor %}
  </div>

  <div class="date">
    <h5>Agendado para</h5>
    {% for reservation in data.reservations %}
    <div>{{reservation.date}}</div> 
    {% endfor %}
  </div>

  <div class="estation">
    <h5>Estação</h5>
    {% for reservation in data.reservations %}
    <div>{{reservation.station}}{{reservation.seat}}</div> 
    {% endfor %}
  </div>

</section>

</body>

{% endblock %}
