{% extends 'layout.njk' %} 

{% block content %}

<head>
  <title>Dashboard</title>
</head>

<body>  

<link rel="stylesheet" href="dashMain.css" />

<section class="card">
  <div class="card-title">
    <h2>Informações sobre COVID-19</h2>
    <div class="card-content">Conheça os protocolos de segurança adotados para um retorno presencial seguro</div>
    <button>Saiba Mais</button>
    </div>
    <img src="cardImage.png" alt="">
</section>

<div class="reservations-info">
  <h1>Reservas Resentes</h1>
  <p>Confira e gerencie as suas últimas reservas</p>
</div>

<section class="reservations">

  <div class="pole">
    <h3>Polo</h3>
    {% for reservation in data.reservations %}
     <div> {{reservation.pole}}</div>
    {% endfor %}
  </div>

  <div class="date">
    <h3>Agendado para</h5>
    {% for reservation in data.reservations %}
    <div>{{reservation.date}}</div> 
    {% endfor %}
  </div>

  <div class="estation">
    <h3>Estação</h3>
    {% for reservation in data.reservations %}
    <div>{{reservation.station}}{{reservation.seat}}{{reservation.floor}}</div> 
    {% endfor %}
  </div>

</section>

</body>

{% endblock %}
